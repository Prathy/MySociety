<resources>

    <style name="Widget.Theme.MySociety.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MySociety.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Profile.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Profile.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Profile.Constraint.Input" parent="Profile.Input">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Dashboard.Option" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">44sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/secondary_200</item>
    </style>

    <style name="Actions.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="Actions.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:enabled">true</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>